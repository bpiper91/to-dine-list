{{!-- expects array of formatted restaurant objects with the following keys:
    .name STRING
    .cuisine STRING
    .imgName STRING (filename for image, based on cuisine type)
    .location STRING
    .notes STRING

    .ratingCheck BOOLEAN (false if not yet rated)
    .rating1 BOOLEAN (true if rated 1 star)
    .rating2 BOOLEAN (true if rated 2 stars)
    .rating3 BOOLEAN (true if rated 3 stars)
        no more than one rating# value should be true; if all false, ratingCheck should be false
--}}
<div class="col s12 m4 l3 teal lighten-5">
    <h4>More Options</h4>
    {{!-- <button class="sidebar-btn" id="edit-restaurant">Edit This Restaurant</button> --}}
    {{!-- <button class="sidebar-btn" id="update-user">Change My Password</button> --}}
    <button class="sidebar-btn" id="logout">Log Out</button>
</div>
<div class="col s12 m8 l9">
    <h2>
        {{restaurant.name}}
    </h2>
    
    <div class="restaurant-view">
        <p><a href="/">&lt;&lt; Back to My To-Dine List</a></p>
        <img src="/images/asian_2.jpg" alt="plate of sushi" style="max-width: 350px;" />
        <p>Cuisine: <span class="red-text">{{restaurant.cuisine}}</span></p>
        <p>Location: <span class="red-text">{{restaurant.location}}</span></p>
        <p style="font-size: 25px">
            Rating: {{#unless ratingCheck}}<span class="red-text">None</span>{{/unless}}
            {{#if rating1}}<span class="red-text"><ion-icon name="star"></ion-icon> <ion-icon name="star-outline"></ion-icon> <ion-icon name="star-outline"></ion-icon></span>{{/if}}
            {{#if rating2}}<span class="red-text"><ion-icon name="star"></ion-icon> <ion-icon name="star"></ion-icon> <ion-icon name="star-outline"></ion-icon></span>{{/if}}
            {{#if rating3}}<span class="red-text"><ion-icon name="star"></ion-icon> <ion-icon name="star"></ion-icon> <ion-icon name="star"></ion-icon></span>{{/if}}
        </p>
        <p>
            Notes:<br />
            <span class="red-text">{{restaurant.notes}}</span>
        </p>
    </div>
</div>
<script src="/js/logout.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
